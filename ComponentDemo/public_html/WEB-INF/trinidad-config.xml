<trinidad-config xmlns="http://myfaces.apache.org/trinidad/config" >

  <!-- Enable debug output -->
  <debug-output>false</debug-output>

  <!-- We define some custom styles in the richdemo skin -->
  <skin-family>#{demoSkin.skinFamily}</skin-family>
  <skin-version>#{demoSkin.skinVersion}</skin-version>

  <!-- No special accessibility mode is required anymore -->
  <accessibility-mode>default</accessibility-mode>

  <!-- Animation can set on the index page -->
  <animation-enabled>#{animation.animationEnabled}</animation-enabled>
</trinidad-config>
